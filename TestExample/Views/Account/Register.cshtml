@model RegisterViewModel

@{
    ViewBag.Title = "Գրանցում";
}

<h2>Գրանցում համակարգ</h2>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" style="width:200px" />
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" style="width:200px" />
            </div>

            <div class="form-group">
                <label asp-for="SecondName"></label>
                <input asp-for="SecondName" class="form-control" style="width:200px" />
            </div>

            <div class="form-group">
                <label asp-for="Passport"></label>
                <input asp-for="Passport" class="form-control" style="width:200px" />
            </div>

            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" style="width:200px" />
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" style="width:200px" />
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" style="width:200px" />
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" class="form-control" style="width:200px" />
            </div>

            <button type="submit" class="btn btn-primary">Գրանցել</button>
        </form>
    </div>
</div>