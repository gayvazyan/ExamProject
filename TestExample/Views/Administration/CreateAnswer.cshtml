@model CreateAnswerViewModel

@{
    ViewBag.Title = "Ավելացնել պատասխան";
}

<form asp-action="CreateAnswer" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="QuestionId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="QuestionId" class="form-control" placeholder="մուտքագրեք հարցի համարը">
        </div>
        <label asp-for="QuestionVariantContent" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="QuestionVariantContent" class="form-control" placeholder="մուտքագրեք պատասխանի տեքստը">
        </div>
        <label asp-for="CorrectAnswer" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="CorrectAnswer" class="form-control" placeholder="մուտքագրեք պատասխանի տեսակը">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Ավելացնել
            </button>
        </div>
    </div>
</form>