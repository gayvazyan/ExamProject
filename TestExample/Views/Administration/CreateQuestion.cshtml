@model CreateQuestionViewModel

@{
    ViewBag.Title = "Ավելացնել նոր հարց ";
}

<form asp-action="CreateQuestion" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>
    <div class="form-group row">
        <label asp-for="QId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="QId" class="form-control" placeholder="մուտքագրեք հարցի համարը">
        </div>
        <label asp-for="QuestionContent" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="QuestionContent" class="form-control" placeholder="մուտքագրեք տեքստը">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Ավելացնել
            </button>
        </div>
    </div>
</form>