@model EditUserViewModel

@{
    ViewBag.Title = "Խմբագրել User";
}

<h1>Խմբագրել </h1>

<form method="post" class="mt-3">
    <div style="width:auto" class="form-group row">
        <label   asp-for="Id" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div style="width:auto" class="form-group row">
        <label  asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control">
          
        </div>
    </div>
    <div style="width:auto" class="form-group row">
        <label  asp-for="UserName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="UserName" class="form-control">
           
        </div>
    </div>
    <div  style="width:auto" class="form-group row">
        <label  asp-for="FirstName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="FirstName" class="form-control">
        </div>
    </div>
    <div style="width:auto" class="form-group row">
        <label  asp-for="LastName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="LastName" class="form-control">
        </div>
    </div>
    <div style="width:auto" class="form-group row">
        <label  asp-for="SecondName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="SecondName" class="form-control">
        </div>
    </div>
    <div style="width:700px" class="form-group row">
        <label  asp-for="Passport" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Passport" class="form-control">
        </div>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Թարմացնել</button>
            <a asp-action="ListUsers" class="btn btn-primary">Հետ</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>User-ի Role-ները</h3>
        </div>
        <div class="card-body">
            @if (Model.Roles.Any())
            {
                foreach (var role in Model.Roles)
                {
                    <h5 class="card-title">@role</h5>
                }
            }
            else
            {
                <h5 class="card-title">Այս պահին չկա</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" style="width:auto" class="btn btn-primary">
                Կառավարել Role-ները
            </a>
        </div>
    </div>

    <div class="card mt-3">
        <div class="card-header">
            <h3>User-ի Claim-ները</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims.Any())
            {
                foreach (var claim in Model.Claims)
                {
                    <h5 class="card-title">@claim</h5>
                }
            }
            else
            {
                <h5 class="card-title">Այս պահին չկա</h5>
            }
        </div>
        <div class="card-footer">
            <a href="#" style="width:auto" class="btn btn-primary">
                Կառավարել Claim-ները
            </a>
        </div>
    </div>
</form>