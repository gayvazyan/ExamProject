@model EditRoleViewModel

@{
    ViewBag.Title = "Խմբագրել Role-ը";
}

<h1>Խմբագրել Role-ը</h1>

<form method="post" class="mt-3">
    <div class="form-group row">
        <label  asp-for="Id" class="col-sm-4 col-form-label"></label>
        <div class="col-sm-8">
            <input asp-for="Id" disabled class="form-control">
        </div>
    </div>
    <div class="form-group row">
        <label  asp-for="RoleName" class="col-sm-4 col-form-label"></label>
        <div class="col-sm-8">
            <input asp-for="RoleName" class="form-control">
            
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Թարմացնել</button>
            <a asp-action="ListRoles" class="btn btn-primary">Չեղարկել</a>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3>Այս role-ի User-ները </h3>
        </div>
        <div class="card-body">
            @if (Model.Users.Any())
            {
                foreach (var user in Model.Users)
                {
                    <h5 class="card-title">@user</h5>
                }
            }
            else
            {
                <h5 class="card-title">Այս պահին ոչինչ չկա</h5>
            }
        </div>
        <div class="card-footer">
            <a asp-controller="Administration" asp-action="EditUsersInRole"
               asp-route-roleId="@Model.Id" class="btn btn-primary">
                Ավելացնել կամ հեռացնել User այս role-ից
            </a>
        </div>

    </div>
</form>