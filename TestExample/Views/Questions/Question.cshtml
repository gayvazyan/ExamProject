@model List<Answer>

@{
    ViewData["Title"] = "Հարց_" + @ViewBag.QId;

}

@{
    var nextId = ViewBag.QId + 1;
    var previewId = ViewBag.QId - 1;
}


<span>Թեստի ավարտին մնաց:</span> <span id="countdown" class="countdown"> </span>
<h3 style="text-align:center">Հարց @ViewBag.QId</h3>
<form asp-controller="Questions" asp-action="Q1Submit" id="myform">
    <ul style="list-style-type:none">
        <li>
            <strong style="text-align:center"> Հարց  @ViewBag.QId.  @ViewBag.Question</strong>
            <input type="hidden" name="questionId" value="@ViewBag.QuestionId" />
            <ol type="A">

                @foreach (var answer in Model)
                {
                    if (answer.QuestionId == @ViewBag.QuestionId)
                    {
                        <li>

                            @if ((ViewBag.Cheked == true) && (ViewBag.Answer == answer.QuestionVariantContent))
                            {
                                <input type="radio" checked="checked" name="question_@ViewBag.QuestionId"
                                       value="@answer.Id" />
                                @answer.QuestionVariantContent
                            }
                            else
                            {
                                <input type="radio" name="question_@ViewBag.QuestionId"
                                       value="@answer.Id" />
                                @answer.QuestionVariantContent
                            }
                        </li>

                    }

                }

            </ol>
        </li>
    </ul>
    <div style="text-align:center">


        @if (ViewBag.QId == 1)
        {

            <button type="submit" class="btn btn-success" asp-route-Idnext=@nextId>Հաջորդ հարցը</button>
        }
        else
        {
            if (ViewBag.QId == 30)
            {
                <button type="submit" class="btn btn-success" asp-route-Idpreview=@previewId>Նախորդ հարցը</button>
            }
            else
            {
                <button type="submit" class="btn btn-success" asp-route-Idpreview=@previewId>Նախորդ հարցը</button>
                <button type="submit" class="btn btn-success" asp-route-Idnext=@nextId>Հաջորդ հարցը</button>
            }

        }




        @*<button onclick="return confirm('Դուք համոզված եք որ ցանկանում եք Ավատրել')" type="submit" class="btn btn-success">Ավարտել</button>*@
        @*<span id="confirmSubmitSpan" style="display:none">
                <span>Դուք համոզված եք որ ցանկանում եք Ավատրել</span>
                <br />
                <button type="submit" style="text-align:center" class="btn btn-success">Այո</button>
                <a href="#" class="btn btn-primary"
                   onclick="confirmSubmit(false)">Ոչ</a>
            </span>

            <span id="submitSpan">
                <a href="#" class="btn btn-success"
                   onclick="confirmSubmit(true)">Ավատրել</a>
            </span>*@

    </div>

    <div asp-validation-summary="All" class="text-danger" style="text-align:left"></div>
</form>

@section Scripts{
    <script src="~/js/submit.js"></script>
}