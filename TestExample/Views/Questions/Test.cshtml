@model List<Answer>

@{
    ViewData["Title"] = "Հարցաշար";

}


<span>Տեստի ավարտին մնաց:</span> <span id="countdown" class="countdown"> </span>
<h3 style="text-align:center">Հարցաշար</h3>
<form asp-controller="Questions" asp-action="Submit">
    @{ var i = 0; }
   <ul style="list-style-type:none">
    @foreach (var question in ViewBag.Questions)
    {
        i++;
        <li>
            <strong style="text-align:center"> Հարց @i   @question.QuestionContent</strong>
            <input type="hidden" name="questionId" value="@question.Id" />
            <ol type="A">

                @foreach (var answer in Model)
                {
                    if (answer.QuestionId == question.Id)
                    {
                        <li>
                            <input type="radio" name="question_@question.Id"
                                   value="@answer.Id" />
                            @answer.QuestionVariantContent
                        </li>

                    }

                }

            </ol>
        </li>

        @if (i > 31)
        {
            break;
        }
    }
    </ul>
    <div style="text-align:center">  <button type="submit" class="btn btn-success">Ավարտել</button></div>

    <div asp-validation-summary="All" class="text-danger" style="text-align:left"></div>
</form>