<h3 style="text-align:center">Հարցաշար </h3>
<form asp-controller="Questions" asp-action="Submit">
    @{ var i = 0; }
    <ul style="list-style-type:none">
        @foreach (var question in ViewBag.ViewQuestionAnswer)
        {
            i++;

            <div class="container">
                <div class="row">

                    <div style="text-align:right" class="col-md-4 portfolio-item">


                        <div style="text-align:left">
                            <button style="text-align:center" class="btn btn-info"><h2>Հարց @i </h2>  </button>

                            <h4> <span> Հարցի արժեքը 1 (մեկ) միավոր </span></h4>
                        </div>

                    </div>


                    <div style="text-align:left" class="col-md-8 portfolio-item">

                        <li>
                            <strong style="text-align:left"> Հարց @i @question.QuestionContent</strong>
                            <input type="hidden" name="questionId" value="@question.Id" />
                            <ol type="A">

                                @foreach (var answer in Model)
                                {
                                    if (answer.QuestionId == question.QId)
                                    {

                                        <li>
                                            @if ((answer.QuestionVariantContent == question.RAnswerContent) && (question.Score == 1))
                                            {
                                                <button class="btn btn-success" style="text-align:left"> @answer.QuestionVariantContent </button>
                                            }

                                            else

                                            {

                                                @if ((answer.QuestionVariantContent == question.RAnswerContent) && (question.Score == 0))
                                                {
                                                    <button class="btn btn-danger" style="text-align:left"> @answer.QuestionVariantContent </button>
                                                }
                                                else
                                                {
                                                    @if (answer.CorrectAnswer == true)
                                                    {

                                                        <button class="btn btn-info" style="text-align:left">
                                                            @answer.QuestionVariantContent
                                                            <span>
                                                                (*ճիշտ պատասխան)
                                                            </span>
                                                        </button>


                                                    }
                                                    else
                                                    {
                                                        @if ((answer.QuestionVariantContent != question.RAnswerContent))
                                                        {
                                                            <span>  @answer.QuestionVariantContent </span>
                                                        }

                                                    }
                                                }

                                            }

                                        </li>
                                    }
                                }
                            </ol>
                        </li>
                    </div>
                </div>
            </div>
        }
    </ul>

</form>


