@model List<Answer>

@{
    ViewData["Title"] = "Հարցաշար";

}

<div style="text-align:center">
    <h3> <strong>Հարգելի <span style="color:forestgreen">  @ViewBag.UserFullName </span> </strong> </h3>
    <h3><strong>Դուք հավաքեցիք <span style="color:forestgreen"> @ViewBag.Result_Test2 </span> միավոր </strong> </h3>
    <h3><strong>Ճիշտ պատասխանները նշված են <span style="color:forestgreen">կանաչ </span>  գույնով </strong></h3>
    <h3> <strong>Սխալ պատասխանները նշված են<span style="color:red"> կարմիր</span> գույնով </strong></h3>
</div>


<h3 style="text-align:center">Հարցաշար 1</h3>
<form asp-controller="Questions" asp-action="Submit">
    @{ var i = 0; }
    <ul style="list-style-type:none">
        @foreach (var question in ViewBag.Questions)
        {
         i++;
        <li>
            <strong style="text-align:center"> Հարց @i @question.QuestionContent</strong>
            <input type="hidden" name="questionId" value="@question.Id" />
            <ol type="A">

                @foreach (var answer in Model)
                    {
                        if (answer.QuestionId == question.Id)
                        {
                <li>
                    @if (answer.CheckdAnswer == true)
                                {
                    @if (answer.CorrectAnswer == true)
                                    {
                    <strong>
                        <span style="color:green">  @answer.QuestionVariantContent </span>
                    </strong>
                                    }
                                    else
                                    {
                    <strong>
                        <span style="color:red">  @answer.QuestionVariantContent </span>
                    </strong>
                                    }
                                }
                                else
                                {
                    @answer.QuestionVariantContent
                                }
                </li>
                        }
                    }
            </ol>
        </li>
        }
        </ol>
</form>